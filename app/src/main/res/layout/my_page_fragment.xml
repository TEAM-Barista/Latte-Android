<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.barista.latte.viewmodels.MyPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="?attr/bgColor"
        android:layout_height="match_parent"
        tools:context=".fragments.mypage.MyPageFragment">

        <ImageView
            android:id="@+id/profile_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/edit_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/profile_imageView"
            app:layout_constraintBottom_toBottomOf="@id/profile_imageView" />

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Juhyang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_imageView" />

        <TextView
            android:id="@+id/email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="(ljh28891004@gmail.com)"
            app:layout_constraintTop_toBottomOf="@id/name_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notice_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_square_10dp"
            android:backgroundTint="@color/latte_green"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bookmark_layout"
            app:layout_constraintTop_toBottomOf="@id/email_textView"
            app:layout_constraintBottom_toTopOf="@id/my_question_layout">

            <TextView
                android:id="@+id/notice_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/jet_brains_mono_b"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/notice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/notice_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/notice_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="22"
                android:textSize="30dp"
                android:fontFamily="@font/jet_brains_mono_eb"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notice_textView" />

            <ImageView
                android:id="@+id/notice_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/notice_count"
                app:layout_constraintTop_toTopOf="@id/notice_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bookmark_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_square_10dp"
            android:backgroundTint="@color/latte_pink"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@id/notice_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notice_layout"
            app:layout_constraintBottom_toTopOf="@id/my_answer_layout">

            <TextView
                android:id="@+id/bookmark_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookmark"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/jet_brains_mono_b"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bookmark_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/bookmark_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookmark_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="22"
                android:textSize="30dp"
                android:fontFamily="@font/jet_brains_mono_eb"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bookmark_textView" />

            <ImageView
                android:id="@+id/bookmark_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/bookmark_count"
                app:layout_constraintTop_toTopOf="@id/bookmark_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_question_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_square_10dp"
            android:backgroundTint="@color/latte_yellow"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notice_layout"
            app:layout_constraintEnd_toStartOf="@id/my_answer_layout"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/my_question_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Question"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/jet_brains_mono_b"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/my_question_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/my_question_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="22"
                android:textSize="30dp"
                android:fontFamily="@font/jet_brains_mono_eb"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_question_textView" />

            <ImageView
                android:id="@+id/my_question_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/my_question_count"
                app:layout_constraintTop_toTopOf="@id/my_question_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_answer_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_square_10dp"
            android:backgroundTint="@color/latte_lavender"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/my_question_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bookmark_layout">

            <TextView
                android:id="@+id/my_answer_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Answer"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/jet_brains_mono_b"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/my_answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/my_answer_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_answer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="22"
                android:textSize="30dp"
                android:fontFamily="@font/jet_brains_mono_eb"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_answer_textView" />

            <ImageView
                android:id="@+id/my_answer_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/my_answer_count"
                app:layout_constraintTop_toTopOf="@id/my_answer_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
